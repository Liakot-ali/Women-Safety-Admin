<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/inner_pad"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/chatMeLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/inner_pad"
        android:paddingLeft="50sp">

        <TextView
            android:id="@+id/chatSentTimeMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:gravity="center"
            android:minWidth="70sp"
            android:text="20:58\n20/07/1988" />

        <TextView
            android:id="@+id/chatMessageMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/message_style_me"
            android:gravity="end"
            android:padding="@dimen/inner_pad"
            android:text="This is the messageT hti shasiht ashothi asashkdith alskdhgithlaskdhgit ashdlkgiahlkhighlthaishtlkahti slkhtiahltkhiahthl"
            android:textSize="@dimen/small_text" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/chatOtherLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/inner_pad"
        android:paddingRight="50sp">

        <TextView
            android:id="@+id/chatMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="start"
            android:background="@drawable/message_style"
            android:padding="@dimen/inner_pad"
            android:text="This is the messageT hti shasiht ashothi asashkdith alskdhgithlaskdhgit ashdlkgiahlkhighlthaishtlkahti slkhtiahltkhiahthl"
            android:textSize="@dimen/small_text" />
        <TextView
            android:id="@+id/chatSentTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="center"
            android:minWidth="70sp"
            android:layout_gravity="center"
            android:text="20:58\n20/07/1988" />
    </LinearLayout>

</LinearLayout>